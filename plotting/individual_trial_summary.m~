for ii = 1:4
    
    plot(summary_data(jj).raw_vsum(ii,:),...
        'color', cmap(ii, :), ...
        'linewidth', .5)

end

plot(summary_data(jj).mean_vsum, 'k')
ylim([0 10])

set(gca, 'XTick', [0 750 1500 2250 3000], 'XTicklabel', {})

